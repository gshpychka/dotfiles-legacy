[module/pomobar]
type=custom/ipc
hook-0 = cat ~/.pomobaroutput
initial=1
click-left = ~/polybar-scripts/pomobar.py --action=new --duration=25 &
click-middle = ~/polybar-scripts/pomobar.py --action=kill &
click-right = ~/polybar-scripts/pomobar.py --action=break --duration=5 &

[module/ticker]
type = custom/script
exec = curl -s https://api.coinbase.com/v2/prices/btc-usd/spot 2>/dev/null | jq -r ".data.amount" 2>/dev/null | sed -E 's/^(.+)/$\\1/'
interval = 600

